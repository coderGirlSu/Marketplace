<h1 class="messages">Messages</h1>
 
<div id="messages">
<table>
    <tr>
      <th>From</th>
      <th>Email</th>
      <th>Date</th>
      <th></th>
      <th></th>
    </tr>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.sender.username %></td>
        <td><%= message.sender.email %></td>
        <td><%= message.created_at.in_time_zone('Sydney').to_formatted_s(:short) %></td>
        <td><%= link_to "Show", message, class:"button" %></td>
        <td class="message-delete-button"><%= button_to "Delete", message, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } } %></td>
      </tr>
    <% end %>
  </table>
</div>


