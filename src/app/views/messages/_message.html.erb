<div id="<%= dom_id message %>">
  <p>
    <strong>Message:</strong>
    <%= message.message %>
  </p>

  <p>
    <strong>Product:</strong>
    <%= message.product_id %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= message.date %>
  </p>

  <p>
    <strong>Sender:</strong>
    <%= message.sender_id %>
  </p>

  <p>
    <strong>Receiver:</strong>
    <%= message.receiver_id %>
  </p>

</div>
