<p style="color: green"><%= notice %></p>

<%= render @product %>

<div>
  <%= link_to "Back", products_path %>
  <% if current_user.id == @product.user_id %>
    <%= link_to "Edit", edit_product_path(@product) %> 
    <%= button_to "Destroy", @product, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</div>
