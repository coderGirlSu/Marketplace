<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :category_id, style: "display: block" %>
    <%= form.select :category_id, @categories.map {|c| [c.name, c.id]} %>
  </div>
  
  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.rich_text_area :description %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price %>
  </div>

  <div>
    <%= form.label :colour, style: "display: block" %>
    <%= form.select :colour, @colours %>
  </div>

  <div>
    <% @conditions.each do |option| %>
      <%= form.label :condition, format_condtion(option), style: "display: block" %>
      <%= form.radio_button :condition, option %>
    <% end %>
  </div>

  <div>
    <%= form.label :listed_date, style: "display: block" %>
    <%= form.date_field :listed_date %> 
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
